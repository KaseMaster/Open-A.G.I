{
    "app": {
        "log_level": "INFO",
        "max_memory_mb": 1024,
        "memory_warning_threshold": 80,
        "memory_critical_threshold": 90,
        "enable": {
            "tor": true,
            "p2p": true,
            "crypto": true,
            "consensus": true,
            "monitoring": true,
            "resource_manager": true
        },
        "security": {
            "rate_limit_per_minute": 60,
            "max_connections_per_ip": 10,
            "session_timeout_minutes": 30,
            "enable_cors": false,
            "enable_csrf": true,
            "validate_peer_input": true,
            "enable_ssl": true,
            "ssl_cert_path": "certs/server.crt",
            "ssl_key_path": "certs/server.key"
        },
        "performance": {
            "worker_processes": 4,
            "max_requests_per_worker": 1000,
            "request_timeout_seconds": 30,
            "keepalive_timeout_seconds": 5,
            "max_header_size": 8192,
            "max_body_size": 10485760
        }
    },
    "tor": {
        "enabled": true,
        "socks_port": 9050,
        "control_port": 9051,
        "onion_routing": true,
        "max_circuits": 10,
        "circuit_timeout": 60,
        "auto_refresh_interval": 3600
    },
    "p2p": {
        "discovery": "zeroconf",
        "heartbeat_interval_sec": 30,
        "max_peers": 50,
        "connection_timeout": 10,
        "message_size_limit": 1048576,
        "encryption_required": true,
        "signature_verification": true
    },
    "crypto": {
        "rotate_interval_hours": 24,
        "hash": "blake3",
        "symmetric": "chacha20-poly1305",
        "asymmetric": "x25519",
        "signature": "ed25519",
        "key_size": 256,
        "pbkdf2_iterations": 100000,
        "auto_rotate": true
    },
    "consensus": {
        "algorithm": "PoC+PBFT",
        "min_nodes": 3,
        "max_nodes": 100,
        "fault_tolerance": 0.33,
        "view_change_timeout": 30,
        "checkpoint_interval": 100,
        "signature_required": true
    },
    "monitoring": {
        "dashboard_port": 8080,
        "enable_socketio": true,
        "metrics_port": 9090,
        "health_check_interval": 60,
        "alert_thresholds": {
            "cpu_percent": 80,
            "memory_percent": 85,
            "disk_percent": 90,
            "network_errors": 10
        },
        "log_retention_days": 30,
        "enable_prometheus": true
    },
    "database": {
        "type": "sqlite",
        "path": "data/aegis.db",
        "backup_interval_hours": 24,
        "max_connections": 20,
        "timeout_seconds": 30,
        "encryption_enabled": true
    },
    "logging": {
        "level": "INFO",
        "format": "json",
        "file_rotation": "10 MB",
        "file_retention": "30 days",
        "enable_console": true,
        "enable_file": true,
        "sanitize_logs": true,
        "exclude_sensitive_fields": ["password", "private_key", "token", "secret"]
    }
}