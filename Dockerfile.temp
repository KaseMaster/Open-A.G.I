FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y build-essential curl git && rm -rf /var/lib/apt/lists/*

RUN groupadd -r aegis && useradd -r -g aegis aegis

COPY requirements.txt ./

RUN pip install --no-cache-dir --upgrade pip && pip install --no-cache-dir flask fastapi uvicorn requests pydantic python-dotenv

COPY . .

RUN chown -R aegis:aegis /app

USER aegis

EXPOSE 8181

CMD ["python", "main.py", "start-dashboard"]
