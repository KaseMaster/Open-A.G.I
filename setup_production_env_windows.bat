if not exist "%CERT_FILE%" (
    openssl x509 -req -days 3650 -in "%CSR_FILE%" -signkey "%KEY_FILE%" -out "%CERT_FILE%"
    if %errorLevel% neq 0 (
        echo [ERROR] Error al generar el certificado
        pause
        exit /b 1
    )
    echo [SUCCESS] Certificado SSL generado: %CERT_FILE%
) else (
    echo [WARNING] El certificado SSL ya existe: %CERT_FILE%
)

