    echo [ERROR] Python no está instalado
    echo Por favor, instale Python desde: https://www.python.org/downloads/
    pause
    exit /b 1
)

echo [SUCCESS] Todas las dependencias están instaladas

REM Función para generar contraseñas seguras
:generate_password
set "password="
for /l %%i in (1,1,%~1) do (
    set /a "rand=!random!%%62"
    set "chars=ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
    for %%j in (!rand!) do (
        set "password=!password!!chars:~%%j,1!"
    )
)
goto :eof

REM Función para generar secretos hexadecimales
:generate_secret
set "secret="
for /l %%i in (1,1,%~1) do (
    set /a "hex=!random!%%16"
    if !hex! equ 10 set "secret=!secret!a"
    if !hex! equ 11 set "secret=!secret!b"
    if !hex! equ 12 set "secret=!secret!c"
    if !hex! equ 13 set "secret=!secret!d"
    if !hex! equ 14 set "secret=!secret!e"
    if !hex! equ 15 set "secret=!secret!f"
    if !hex! lss 10 set "secret=!secret!!hex!"
)
goto :eof

REM Generar contraseñas y secretos
echo [INFO] Generando contraseñas y secretos seguros...

call :generate_secret 128
set "JWT_SECRET=!secret!"

call :generate_password 32
set "POSTGRES_PASSWORD=!password!"

call :generate_password 32
set "REDIS_PASSWORD=!password!"

